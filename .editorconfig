[*.{kt,kts}]
indent_size=4
max_line_length = 120
insert_final_newline = true

# Do not apply the general rule to generated files
[**/generated/**/*.{kt,kts}]
indent_size=unset
max_line_length = unset
insert_final_newline = unset

[**/*{t,T}est/kotlin/**.kt]
ktlint_standard_class-signature = disabled
