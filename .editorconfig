[*.{kt,kts}]
indent_size=4
insert_final_newline = true
ktlint_code_style=intellij_idea
max_line_length = 120

# Do not apply the general rule to generated files
[**/generated/**/*.{kt,kts}]
indent_size = unset
max_line_length = unset
insert_final_newline = unset

[**/*{t,T}est/kotlin/**.kt]
ktlint_standard_class-signature = disabled
