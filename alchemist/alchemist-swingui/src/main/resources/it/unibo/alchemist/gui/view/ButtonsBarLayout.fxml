            <JFXButton id="startStopButton" fx:id="startStopButton" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" minWidth="40.0" mnemonicParsing="false" prefHeight="40.0" ripplerFill="WHITE" text="Play" textAlignment="CENTER" textFill="WHITE" wrapText="true" ButtonBar.buttonData="LEFT" />
